<Application x:Class="SaisieOperation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SaisieOperation"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <LinearGradientBrush x:Key="degradeBarre" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFF8F8F9" Offset="1"/>
            <GradientStop Color="#FFDAECFF"/>
        </LinearGradientBrush>
        <ImageBrush x:Key="BtnPlus" ImageSource="ajoutIcon.png"/>
        <ImageBrush x:Key="BtnAide" ImageSource="aideIcon.png"/>
        <ImageBrush x:Key="BtnDupliquer" ImageSource="dupliquerIcon.png"/>

    </Application.Resources>
</Application>
